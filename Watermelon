import java.util.Scanner;
public class CodeForces {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        if(num >= 4 && num%2 == 0)
        {
            System.out.print("YES");
        }
        else
        {
            System.out.print("NO");
        }
    }
}
